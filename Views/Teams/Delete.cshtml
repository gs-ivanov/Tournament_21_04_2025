@model TeamViewModel

@{
    ViewData["Title"] = "Изтриване на отбор";
}

<h2 class="mt-3 text-danger">Изтриване на "@Model.Name"</h2>

<div class="alert alert-warning">
    <strong>Внимание:</strong> Сигурни ли сте, че искате да изтриете този отбор?
</div>

<div class="card shadow p-3 mb-4 bg-light rounded">
    <dl class="row">
        <dt class="col-sm-3">Име</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Треньор</dt>
        <dd class="col-sm-9">@Model.CoachName</dd>

        <dt class="col-sm-3">Имейл</dt>
        <dd class="col-sm-9">@Model.ContactEmail</dd>

        <dt class="col-sm-3">Такса платена</dt>
        <dd class="col-sm-9">@(Model.FeePaid ? "Да" : "Не")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>
