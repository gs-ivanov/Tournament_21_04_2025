@model EditTeamViewModel

@{
    ViewData["Title"] = "Редакция на отбор";
}

<h2>Редактирай @Model.Name</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CoachName"></label>
        <input asp-for="CoachName" class="form-control" />
        <span asp-validation-for="CoachName" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="LogoUrl"></label>
        <input asp-for="LogoUrl" class="form-control" />
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="FeePaid" class="form-check-input" />
        <label asp-for="FeePaid" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Запази</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
