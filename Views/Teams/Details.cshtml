@model TeamViewModel

@{
    ViewData["Title"] = "Детайли за отбор";
}

<h2 class="mt-3">Детайли за "@Model.Name"</h2>

<div class="card shadow p-3 mb-4 bg-light rounded">
    <div class="row">
        <div class="col-md-3 text-center">
            <img src="@Model.LogoUrl" class="img-fluid" alt="logo" />
        </div>
        <div class="col-md-9">
            <dl class="row">
                <dt class="col-sm-3">Име</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Треньор</dt>
                <dd class="col-sm-9">@Model.CoachName</dd>

                <dt class="col-sm-3">Имейл</dt>
                <dd class="col-sm-9">@Model.ContactEmail</dd>

                <dt class="col-sm-3">Такса платена</dt>
                <dd class="col-sm-9">@(Model.FeePaid ? "Да" : "Не")</dd>
            </dl>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редакция</a>
