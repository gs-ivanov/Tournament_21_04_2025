@model List<TeamRankingViewModel>

@{
    ViewData["Title"] = "Класиране";
}

<h2 class="mt-3">Крайно класиране @ViewBag.TournamentName</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Отбор</th>
            <th>И</th>
            <th>П</th>
            <th>Р</th>
            <th>З</th>
            <th>ГР</th>
            <th>Голове (З : П)</th>
            <th>Точки</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var t = Model[i];
        <tr>
            <td>@(i + 1)</td>
            <td>@t.TeamName</td>
            <td>@t.MatchesPlayed</td>
            <td>@t.Wins</td>
            <td>@t.Draws</td>
            <td>@t.Losses</td>
            <td>@t.GoalDifference</td>
            <td>@t.GoalsFor : @t.GoalsAgainst</td>
            <td><strong>@t.Points</strong></td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
