@model IEnumerable<ManagerRequest>

@{
    ViewData["Title"] = "Заявки за участие в турнир";
    var currentStatus = ViewData["CurrentStatus"]?.ToString() ?? "Pending";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

